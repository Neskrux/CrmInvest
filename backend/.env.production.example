# Exemplo de arquivo .env para PRODUÇÃO

# Supabase Configuration
SUPABASE_URL=sua_url_do_supabase
SUPABASE_SERVICE_KEY=sua_service_key_do_supabase

# JWT Secret (gere uma nova chave para produção)
JWT_SECRET=sua_chave_jwt_super_secreta_para_producao

# Meta Ads API Configuration (opcional)
META_ACCESS_TOKEN=seu_token_meta_ads
META_AD_ACCOUNT_ID=sua_conta_meta_ads

# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration - SendGrid (RECOMENDADO PARA PRODUÇÃO)
EMAIL_SERVICE=sendgrid
EMAIL_USER=apikey
EMAIL_PASS=SG.sua_api_key_do_sendgrid
EMAIL_FROM=noreply@seudominio.com
FRONTEND_URL=https://seudominio.com

